# Environment Configuration for Resume Extractor API

# Application Settings
ENVIRONMENT=production
PORT=8000
HOST=0.0.0.0

# CORS Settings
CORS_ORIGINS=https://resume-extractor-frontend.onrender.com,http://localhost:3000

# Model Settings
MODEL_CACHE_DIR=./models
BERT_MODEL_PATH=./bert_skills_model.pth
LSTM_MODEL_PATH=./lstm_resume_matcher_best.h5
SUMMARIZER_MODEL_PATH=./app/bert_summarizer_model.pth

# TensorFlow/PyTorch Settings
TF_CPP_MIN_LOG_LEVEL=2
TOKENIZERS_PARALLELISM=false
PYTORCH_ENABLE_MPS_FALLBACK=1

# Logging
LOG_LEVEL=INFO

# API Settings
API_TITLE=Resume Extractor API
API_VERSION=2.0.0
MAX_UPLOAD_SIZE=10485760  # 10MB

# Performance Settings
WORKERS=1
TIMEOUT=300
KEEP_ALIVE=2
